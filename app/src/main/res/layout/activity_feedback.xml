<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_button"
    android:orientation="vertical"
    tools:context="com.example.krishanasony.e_billing.FeedbackActivity">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Help us improve our customer service"
    android:layout_marginLeft="27dp"
    android:layout_marginTop="60dp"
    android:textSize="18dp"
    android:textStyle="bold"
    />
    <EditText
        android:id="@+id/edittxt"
        android:layout_width="320dp"
        android:layout_height="265dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        android:paddingBottom="210dp"
        android:hint="Enter your suggestionm here,Not more than 1000 character"
        />
    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="post"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:background="#2ba61e"/>

</LinearLayout>
