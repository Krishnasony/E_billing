<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
    tools:context="com.example.krishanasony.e_billing.Bill_payActivity">
    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:elevation="13dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="20dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Your Name:"
            android:textSize="20dp"
            android:textStyle="bold"

            />
        <EditText
            android:id="@+id/nm_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="xyz"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="50dp"/>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:elevation="13dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="20dp"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="40dp"
            android:text="Contact No.:"
            android:textSize="20dp"
            android:textStyle="bold"

            />
        <EditText
            android:id="@+id/phn_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="9074297336"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="50dp"/>

    </android.support.v7.widget.CardView>


    <EditText
        android:id="@+id/cmp_txt"
        android:layout_width="330dp"
        android:layout_height="210dp"
        android:hint="Write Your compaint here... "
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:paddingBottom="180dp"/>
    <Button
        android:id="@+id/sub_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="submit"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_marginTop="17dp"
        android:background="#2ba61e"/>


</LinearLayout>
